

<h1 class="title">Hello {{data.username}}</h1>
<img src="{{data.avatar}}" alt="">
<p class="phrase">{{data.phrase}}</p>
<a href="/profile/edit/password" class="btn">Change password</a>
<a href="/profile/edit/avatar" class="btn">Change avatar</a>
<a href="/profile/edit/phrase" class="btn">Change phrase</a>

<div class="columnasProf">
    <div>
        <h2>READING NOW</h2>
        {{#each data.readingNow}}
            <a href="/profile/remove-book-readingNow/{{_id}}" class="removeBook">&#10060</a>
            <a href="/books/book-details/{{book_id}}">
                <img src={{thumbnail}} alt={{title}}>
            </a>
            <p>{{title}}</p>  
        {{/each}}
    </div>
    <div>
        <h2>WISHLIST</h2>
        {{#each data.wishlist}}
            <a href="/profile/remove-book-wishlist/{{_id}}" class="removeBook">&#10060</a>
            <a href="/books/book-details/{{book_id}}">
                <img src={{thumbnail}} alt={{title}}>
            </a>
            <p>{{title}}</p>
        {{/each}}
    </div>
    <div>
        <h2>BOOKS FINISHED</h2>
        {{#each data.booksFinished}}
            <a href="/profile/remove-book-booksFinished/{{_id}}" class="removeBook">&#10060</a>
            <a href="/books/book-details/{{book_id}}">
            <img src={{thumbnail}} alt={{title}}>
            </a>
            <p>{{title}}</p>
        {{/each}}
    </div>
</div>